        link(rel='stylesheet' href='/assets/styles/style.css')

    body(ng-controller='MainController')
        nav.main-nav
            md-button.md-fab.md-primary(ng-click='toggleLeft()')
                i.fa.fa-lg.fa-bars
        md-sidenav.md-sidenav-left(md-component-id='left')
            md-content(flex layout-padding layout='column')
                h3.align-center Fantasy Game
                md-button.align-left
                    i.fa.fa-user
                    span  Character
                md-divider
                md-button.align-left
                    i.fa.fa-home
                    span  Dashboard
                md-button.align-left
                    i.fa.fa-sign-out
                    span  Log Out
                md-button.md-warn.align-left(ng-click='closeLeft()')
                    i.fa.fa-times
                    span  Close
        main.wrapper(layout='row')
            block content
