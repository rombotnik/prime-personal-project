                    //    p
                    //        input(type='checkbox')
                    //        |  Romance
                    //    p
                    //        input(type='checkbox')
                    //        |  Sci-fi
                    //    p
                    //        input(type='checkbox')
                    //        |  Misc / Other
            div.col-sm-9
                h2 Results
                p Total games found: {{games.length}}
                div.row
                    div(ng-repeat='game in games').col-sm-6
                        div.panel.panel-default
                            div.panel-heading
                                h3 {{game.title}}
                                p {{game.category}}
                            div.panel-body
                                h4 Info
                                ul.list-unstyled
                                    li Author: {{game.author}}
                                    li Rating: {{game.rating}} / 5
                                h4 Description
                                p {{game.description}}
                            div.panel-footer
                                button.btn.btn-primary PLAY NOW