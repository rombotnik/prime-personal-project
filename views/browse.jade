extends layout
block content
    main(ng-controller='BrowseController').container
        div.row
            div.col-sm-3
                h2 Sidebar
                form
                    div.input-group
                        input.form-control(type='text' placeholder='Search for...')
                        span.input-group-btn
                            button.btn.btn-primary
                                i.glyphicon.glyphicon-search
                    h3 Filter by...
                    div.form-group
                        label Category
                        select.form-control
                            option All
                            option CYOA
                            option Dating Sim
                            option Misc / Other
